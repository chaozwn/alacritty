import:
  - ~/.config/alacritty/themes/themes/catppuccin.yaml
  - ~/.config/alacritty/fonts.yml

env:
  TERM: tmux-256color

window:
  dimensions:
    columns: 160
    lines: 48
  decorations: none
  opacity: 1.0
  dynamic_title: true

selection:
  save_to_clipboard: true

cursor:
  style:
    shape: Block
    blinking: On

  unfocused_hollow: false
  blink_interval: 550

live_config_reload: true
